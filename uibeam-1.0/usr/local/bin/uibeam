#!/bin/bash

if [ -z "$1" ];then
  echo "Usage: $0 <filename>"
  exit 1
fi

sed -i -E '
  /signed +int|unsigned +int/!{
    s/\b(short|long +long|long) +int +([a-zA-Z_][a-zA-Z0-9_]*( *= *[^;]+)?;)/unsigned \1 \2/g
  }
' "$1"

cat << EOF
::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::............................................
